<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_all_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dashboard_card_margin"
    android:padding="@dimen/dashboard_card_padding"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/get_all_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <!--<ImageView
            android:id="@+id/iv_dashboard_user_img"
            android:layout_width="@dimen/dashboard_user_image_width"
            android:layout_height="@dimen/dashboard_user_image_height"
            android:src="@color/orange_A400"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:text="Your comment got upvoted"
            android:id="@+id/noti_message"
            style="@style/HeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<TextView
            android:id="@+id/tv_dashboard_post_time"
            style="@style/OtherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/12/2017 20:15:20"
            app:layout_constraintLeft_toRightOf="@id/iv_dashboard_user_img"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_user_name" />-->

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_margin="8dp"
            android:src="@color/cyan_400"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_user_name" />

        <TextView
            android:text="Name:"
            android:id="@+id/user_name"
            style="@style/OtherText"
            android:layout_width="@dimen/size_0"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_get_all"
            app:layout_constraintTop_toBottomOf="@+id/noti_message" />
        <TextView
            android:textSize="15dp"
            android:text="12-12-12   23:23:23"
            android:id="@+id/noti_time"
            style="@style/OtherText"
            android:layout_width="@dimen/size_0"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_get_all"
            app:layout_constraintTop_toBottomOf="@+id/noti_subject" />
        <TextView
            android:textSize="15dp"
            android:text="Upvoted your Comment"
            android:id="@+id/noti_subject"
            style="@style/OtherText"
            android:layout_width="@dimen/size_0"
            android:layout_marginTop="5dp"
            android:paddingTop="4dp"
            android:layout_height="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_get_all"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />






    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>