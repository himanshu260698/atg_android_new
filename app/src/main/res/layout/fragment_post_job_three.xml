<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ATG.World.fragments.PostJobThree">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                android:background="#228B22"
                tools:targetApi="lollipop">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >

                    <TextView
                        android:id="@+id/article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/back"
                        android:text="Post Job"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/article"
                        android:layout_alignBottom="@+id/article"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="13dp"
                        android:background="#228B22"
                        android:clickable="true"
                        android:text="Skip"
                        android:elevation="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/article"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/back_arrow" />
                </RelativeLayout>
            </Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="40dp"
                android:id="@+id/scrollview"
                android:fadeScrollbars="false"
                >
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"

                    >

                    <EditText
                        android:id="@+id/company_name"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="Company Name"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/company_website"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/company_name"
                        android:layout_below="@+id/company_name"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="Company Website"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/role"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/company_website"
                        android:layout_below="@+id/company_website"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="Role"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/external_link"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/role"
                        android:layout_below="@+id/role"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="External Link"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/external_link"
                        android:layout_below="@+id/external_link"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="email"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/dead_line"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/email"
                        android:layout_below="@+id/email"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="Dead Line"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/education"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/dead_line"
                        android:layout_below="@+id/dead_line"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:textColorHint="#228B22"
                        android:hint="Education"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/min_exp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/education"
                        android:layout_below="@+id/education"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Name"
                        android:textColorHint="#228B22"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


                    <EditText
                        android:id="@+id/location"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/min_exp"
                        android:ems="10"
                        android:layout_below="@id/min_exp"
                        android:hint="Location"
                        android:layout_marginTop="28dp"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColorHint="#228B22" />
                    <EditText
                        android:id="@+id/tags"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/location"
                        android:ems="10"
                        android:layout_below="@id/location"
                        android:hint="Tags"
                        android:layout_marginTop="28dp"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColorHint="#228B22" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="300dp"
                        android:layout_marginTop="28dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tags"
                        android:layout_marginBottom="20dp"
                        android:layout_alignStart="@+id/tags" />
                </RelativeLayout>
            </ScrollView>
            <Button
                android:id="@+id/submitJob"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#228B22"
                android:text="Submit"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressBar_cyclic_job_three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:indeterminateTint="#228B22" />
</FrameLayout>
