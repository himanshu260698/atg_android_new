<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.ATG.World.fragments.UpdateProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <Button
                android:id="@+id/update_back_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/back_arrow"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:paddingTop="12dp"
                android:paddingStart="8dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="Update profile" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <ScrollView
            android:requiresFadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="200dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/e_profileimage"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/person_icon"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp" />


                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_round_design"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:paddingTop="13dp"
                    android:paddingStart="8dp"
                    android:text="Username:" />
                <EditText
                    android:background="@drawable/edittext_round_design"
                    android:padding="4dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginRight="10dp"

                    android:id="@+id/e_username"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:hint="Username" >

                </EditText>


            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="First name:" />
                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/e_firstname"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:hint="First name" >

                    </EditText>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Last name:" />
                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e_lastname"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:hint="Last name" >
                    </EditText>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Email:" />
                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="110dp"
                        android:id="@+id/e_email"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:hint="Email" >
                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Mobile No.:" />

                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="110dp"
                        android:id="@+id/e_mobile"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Mobile No." >

                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Phone No.:" />

                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e_phone"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:hint="Phone No." >

                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Location:" />

                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="110dp"
                        android:id="@+id/e_location"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Location" >

                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Profession:" />

                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="110dp"
                        android:id="@+id/e_profession"
                        android:layout_width="match_parent"
                        android:singleLine="false"
                        android:inputType="textPersonName"
                        android:hint="Profession" >

                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="About me:" />

                    <EditText
                    android:background="@drawable/edittext_round_design"
                    android:padding="4dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                        android:layout_marginStart="110dp"
                    android:id="@+id/e_aboutme"
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:inputType="textPersonName"
                    android:hint="About me" >

                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edittext_round_design"
                    android:layout_height="50dp">
                    <TextView

                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:paddingTop="13dp"
                        android:paddingStart="8dp"
                        android:textSize="18sp"
                        android:text="Profile tag:" />

                    <EditText
                        android:background="@drawable/edittext_round_design"
                        android:padding="4dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e_profiletag"
                        android:layout_marginStart="110dp"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Profile tag" >

                    </EditText>
                </RelativeLayout>



                <Spinner
                    android:background="@drawable/edittext_round_design"
                    android:padding="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:backgroundTint="#d3e68d"
                    android:splitMotionEvents="true"
                     />
                <Button
                    android:background="@drawable/save_butto"
                    android:padding="4dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/updateProfileButton"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:text="Save" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_cyclic"
        android:layout_width="70dp"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_height="70dp"
        android:layout_gravity="center"
        />
</FrameLayout>
