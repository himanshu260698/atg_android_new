<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/layout_selectableheader"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/ic_avtar_male"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_height="50dp"
                android:id="@+id/niche_group_img"/>

            <TextView
                android:id="@+id/node_value"
                style="@style/HeadingText"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Join"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/join_button_single"
                    android:background="@drawable/green_rect_background"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/leave_button_single"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Leave"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:background="@drawable/red_rect_background"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>