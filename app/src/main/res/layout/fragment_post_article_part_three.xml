<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ATG.World.fragments.PostArticlePartThree">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="4dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <Button
                android:id="@+id/change_back_button_article3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/back_arrow"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:paddingTop="12dp"
                android:paddingStart="8dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="Post article" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:background="@drawable/editext_round_design_two"
            android:id="@+id/tagEdittext"
            android:padding="4dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="start"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:hint="tags" />

        <ImageButton
            android:id="@+id/selectarticleImage"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/image_icon"
            android:layout_below="@+id/tagEdittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
             >

        </ImageButton>

        <Button
            android:id="@+id/finalPostButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/tagEdittext"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/save_butto"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/skipAndFinish"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/finalPostButton"
            android:layout_alignBottom="@+id/finalPostButton"
            android:layout_alignStart="@+id/tagEdittext"
            android:layout_marginStart="15dp"
            android:background="@drawable/save_butto"
            android:text="Skip"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/addImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/selectarticleImage"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="Add image" />
    </RelativeLayout>
</LinearLayout>
</FrameLayout>
