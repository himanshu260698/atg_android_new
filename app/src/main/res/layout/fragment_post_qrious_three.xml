<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ATG.World.fragments.PostQriousThree">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="4dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/ab_gradient"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/change_back_button_article3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/change_back_button_article3"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:text="Post qrious"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/skipAndFinish"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ab_gradient"
            android:text="Skip"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:background="@drawable/edittectdesignthree"
                android:id="@+id/tagEdittext"
                android:padding="6dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:gravity="start"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="textMultiLine"
                android:hint="tags" />

            <ImageButton
                android:id="@+id/selectarticleImage"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/image_icon"
                android:layout_below="@+id/tagEdittext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                >

            </ImageButton>

            <Button
                android:id="@+id/finalPostButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:background="#228B22"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/addImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/selectarticleImage"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#228B22"
                android:text="Add image" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
