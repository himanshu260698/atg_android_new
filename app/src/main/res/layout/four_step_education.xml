<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/SIZE_10"

    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_select_group_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_final_educat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/green_500"
            android:textSize="@dimen/TEXT_SIZE_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_final_educat_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/SIZE_10"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imv_share_eduation_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_share_black_24dp" />
        </RelativeLayout>
        <!--
                <ImageView
                    android:id="@+id/imv_final_educat_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/SIZE_10"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_detail_img_found" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_share_article" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/green_500"
            android:textSize="@dimen/TEXT_SIZE_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/SIZE_10"
            android:gravity="center_horizontal"
            android:text="The more you share"
            android:textColor="@color/green_500"
            android:textSize="@dimen/TEXT_SIZE_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_chevron_right_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/SIZE_10"
            android:gravity="center_horizontal"
            android:text="The more are the upvotes"
            android:textColor="@color/green_500"
            android:textSize="@dimen/TEXT_SIZE_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/SIZE_10"
            android:gravity="center_horizontal"
            android:text="The more are the views"
            android:textColor="@color/green_500"
            android:textSize="@dimen/TEXT_SIZE_16" />

        <TextView
            android:id="@+id/tv_view_educat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/SIZE_20"
            android:gravity="center_horizontal"
            android:padding="@dimen/SIZE_10"
            android:text="View Your Post"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>