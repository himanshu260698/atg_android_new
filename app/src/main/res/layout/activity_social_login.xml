<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/login_progress_home"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@drawable/artboard_signup">

        </LinearLayout>


    <ScrollView
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/icon_google_logo"
                android:text="\t\t\tSign in using Google"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor=" #339966"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_facebook_logo"
                android:text="\t\t\tSign in using Facebook"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor=" #339966"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/border"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/login_button_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_twitter_logo"
                android:text="\t\t\tSign in using Twitter"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textColor=" #339966"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/border"
                android:paddingLeft="15dp"
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_email_logo"
                    android:text="\t\t\tSign up using Email"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor=" #339966"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:id="@+id/sign_up_email"
                    android:background="@drawable/border"
                    android:paddingLeft="15dp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="10dp"/>


            <Button
                android:id="@+id/more_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More options"
                android:fontFamily="sans-serif-light"
                android:textColor=" #339966"
                android:background="@android:color/transparent"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:text="Already have an account? Sign In"
                android:background="@android:color/transparent"
                android:id="@+id/login_email"
                android:layout_marginTop="120dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>